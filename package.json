{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "lint": "oxlint",
    "prepare": "husky",
    "analyze": "nuxi analyze"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "oxlint --no-ignore --max-warnings 0",
      "bash -c 'vue-tsc --noEmit --skipLibCheck'",
      "prettier --ignore-unknown --write"
    ],
    "*.{css,scss,sass,md,json}": [
      "prettier --ignore-unknown --write"
    ],
    "!(pnpm-lock).yml": [
      "prettier --ignore-unknown --write"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.6.0",
    "@prisma/client": "5.21.1",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@vite-pwa/nuxt": "^0.10.5",
    "idb": "^8.0.0",
    "nuxt": "^3.13.2",
    "trpc-nuxt": "^0.10.22",
    "vue": "latest",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/utils": "^0.7.10",
    "@iconify-json/logos": "^1.2.0",
    "@iconify-json/mdi": "^1.2.1",
    "@mdi/font": "^7.4.47",
    "@types/dompurify": "^3.0.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@unocss/nuxt": "^0.62.3",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vueuse/core": "^11.0.3",
    "@vueuse/nuxt": "^11.0.3",
    "dayjs": "^1.11.13",
    "dompurify": "^3.1.7",
    "github-markdown-css": "^5.6.1",
    "highlight.js": "^11.10.0",
    "husky": "^9.1.6",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.10",
    "marked": "^14.1.2",
    "marked-highlight": "^2.1.4",
    "openai": "^4.68.4",
    "oxlint": "^0.9.9",
    "prettier": "3.3.3",
    "prisma": "^5.21.1",
    "ress": "^5.0.2",
    "sass-embedded": "1.79.3",
    "temml": "^0.10.29",
    "type-fest": "^4.26.1",
    "unocss": "^0.62.3",
    "unplugin-icons": "^0.19.3",
    "vue-tsc": "^2.1.6",
    "vuetify": "3.7.1",
    "vuetify-nuxt-module": "0.18.2"
  }
}
